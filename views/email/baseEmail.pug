doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title= subject
    style.
      body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
      .content { max-width: 600px; margin: 0 auto; padding: 20px; }
      .header { background-color: #f4f4f4; padding: 20px; text-align: center; }
      .body { padding: 20px; }
      .footer { background-color: #f4f4f4; padding: 20px; text-align: center; }
      .social-links { margin-top: 20px; }
      .social-links a { margin: 0 10px; text-decoration: none; color: #333; }

  body
    table.body(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tr
        td
          table.content(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tr
              td.header
                h1= subject
            tr
              td.body
                block content
            tr
              td.footer
                p If you have any questions, please don't hesitate to contact us.
                .social-links
                  a(href='mailto:developers@w2hub.org') Email Us
                  a(href='https://www.facebook.com/your-page') Facebook
                  a(href='https://www.twitter.com/your-handle') Twitter
                  a(href='https://www.instagram.com/your-profile') Instagram
                  a(href='https://www.linkedin.com/company/your-company') LinkedIn